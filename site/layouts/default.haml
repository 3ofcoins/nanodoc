!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "generator", :content => "Nanodoc #{config[:nanodoc][:version]}"}
    %title= @item[:title]
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    %link{:href => "/_static/bootstrap/css/bootstrap.css", :rel => "stylesheet"}
    %link{:href => "/_static/bootstrap/css/bootstrap-responsive.min.css", :rel => "stylesheet"}
    %link{:href => "/_static/nanodoc.css", :rel => "stylesheet"}
  %body
    #wrap
      %header.navbar
        -# .navbar-fixed-top
        .navbar-inner
          .container-fluid
            %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{:href => "/"}= @config[:project_name]
      .container-fluid
        .row-fluid
          %nav.span12
            %ul.breadcrumb
              - breadcrumbs_trail.each do |crumb|
                - if crumb.identifier == @item.identifier
                  %li.active= crumb.label
                - else
                  %li
                    = link_to(crumb.label, crumb.reps.first)
                    %span.divider /
        .row-fluid
          .span2.well.well-small
            %ul.nav.nav-list
              - if @item.readme?
                %li.active
                  %i.icon-hand-right
                  = @item.basename
              - elsif @item.directory.readme?
                %li
                  %a{:href => item.directory.path}
                    %i.icon-book
                    = item.directory.basename
              - @item.siblings.each do |sibling|
                - if sibling.identifier == @item.identifier
                  %li.active
                    %i.icon-hand-right
                    %b= sibling.label
                - else
                  %li
                    %a{:href => sibling.path}
                      - if sibling.directory?
                        %i.icon-folder-open
                      - elsif sibling.doc?
                        %i.icon-book
                      - else
                        %i.icon-file
                      = sibling.label
          .span10~ yield
      #push
    %footer
      .container-fluid.text-center
        %ul.inline
          %li
            Generated by
            %a(href="http://3ofcoins.github.io/nanodoc/") Nanodoc
            version
            = config[:nanodoc][:version]
    %script{:src => "/_static/jquery-1.9.1.min.js"}
    %script{:src => "/_static/bootstrap/js/bootstrap.min.js"}
